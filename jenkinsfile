pipeline 
{
    agent any
    stages {
        stage('build') {
            steps {
                sh 'docker build -t app .'
            }
        }

        stage('install yarn') {
            steps {
                sh "yarn" 
            }
        }

        stage('Lint') {
            steps {
               sh "yarn lint" 
            } 
            post{
                success{
                    echo "======== lint successfully ========"
                }
                failure{
                    echo "======== lint failed ========"
                }
            }
        }
        
        stage("UnitTest"){
            steps{
                sh 'yarn test:unit'
            }
            post{
                success{
                    echo "======== unit test successfully ========"
                }
                failure{
                    echo "======== unit test failed ========"
                }
            }
        }

        stage("e2eTest"){
            steps{
                sh 'yarn test:e2e --headless'
            }
            post{
                success{
                    echo "======== e2e test successfully ========"
                }
                failure{
                    echo "======== e2e test failed ========"
                }
            }
        }
        
    }
}