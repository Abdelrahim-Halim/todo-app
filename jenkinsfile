pipeline 
{
    agent any
    stages {
        stage('build') {
            steps {
                sh 'docker build -t app . |  tee my-image.build.log '
            }
            post { always {  archiveArtifacts artifacts: 'my-image.build.log' } } 
        }
 
        stage('Lint') {
            steps {
               sh "docker run --rm -p 4222:4222 --name todo app lint" 
            } 
            post{
                success{
                    echo "======== lint successfully ========"
                }
                failure{
                    echo "======== lint failed ========"
                }
            }
        }
        
        stage("UnitTest"){
            steps{
                sh 'docker run --rm -p 4222:4222 --name todo app test:unit'
            }
            post{
                success{
                    echo "======== unit test successfully ========"
                }
                failure{
                    echo "======== unit test failed ========"
                }
            }
        }

        stage("e2eTest"){
            steps{
                sh 'docker run --rm -p 4222:4222 --name todo app test:e2e --headless'
            }
            post{
                success{
                    echo "======== e2e test successfully ========"
                }
                failure{
                    echo "======== e2e test failed ========"
                }
            }
        }
        
    }
}

